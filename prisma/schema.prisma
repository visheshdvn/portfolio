// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  firstname  String
  lastname   String
  username   String
  password   String
  dp         String
  dpAlt      String
  // other accounts
  twitter    String
  linkedin   String
  instagram  String
  // relations
  blogposts  BlogPosts[]
  // default fields
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
}

model BlogPosts {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String?
  description String?
  banner      String?
  bannerAlt   String?
  date        DateTime?
  content     String?
  minuteRead  Int?     @default(1)
  // relations
  author      User?    @relation(fields: [authorId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  authorId    Int?
  topic       Topics?  @relation(fields: [topicId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  topicId     Int?
  // default fields
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  // 
  published   Boolean  @default(false)
}

model Topics {
  id         Int         @id @default(autoincrement())
  name       String
  slug       String
  // relations
  blogposts  BlogPosts[]
  // default fields
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
}
